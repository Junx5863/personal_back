                    <th>Precio</th>
                    <th>Fecha de Lanzamiento</th>
                    <th>Género</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Stock</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each videoGamesPath}}
                    <tr>
                        <td>{{this.title}}</td>
                    <td>{{this.platform}}</td>
                    <td>${{this.price}}</td>
                    <td>{{this.release_date}}</td>
                    <td>{{this.genre}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.stock}}</td>
                    </tr>
                   {{/each}}
                </tbody>
            </table>
        </div>

